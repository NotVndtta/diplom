<turbo-frame id="modal">
     <div class="fixed inset-0 bg-black bg-opacity-70 flex items-center justify-center z-50">
       <div class="bg-white shadow-lg rounded-xl p-8 max-w-lg w-full relative">
         <h2 class="text-2xl font-semibold text-gray-900 mb-6"><%= t('profile.add_experience') %></h2>
         <%= form_with(model: [@user, Experience.new], url: profile_experiences_path(@user), class: "space-y-6", data: { turbo: true }) do |form| %>
           <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
             <div>
               <%= form.label :start_date_at, class: "block text-sm font-medium text-gray-700" %>
               <%= form.date_field :start_date_at, class: "mt-1 block w-full rounded-lg border px-4 py-3 shadow-sm focus:outline-none focus:ring-2 focus:ring-lime-500 border-lime-200" %>
             </div>
             <div>
               <%= form.label :end_date_at, class: "block text-sm font-medium text-gray-700" %>
               <%= form.date_field :end_date_at, class: "mt-1 block w-full rounded-lg border px-4 py-3 shadow-sm focus:outline-none focus:ring-2 focus:ring-lime-500 border-lime-200" %>
             </div>
           </div>
           <div>
             <%= form.label :company, class: "block text-sm font-medium text-gray-700" %>
             <%= form.text_field :company, class: "mt-1 block w-full rounded-lg border px-4 py-3 shadow-sm focus:outline-none focus:ring-2 focus:ring-lime-500 border-lime-200" %>
           </div>
           <div>
             <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
             <%= form.text_area :description, rows: 4, class: "mt-1 block w-full rounded-lg border px-4 py-3 shadow-sm focus:outline-none focus:ring-2 focus:ring-lime-500 border-lime-200" %>
           </div>
           <div>
             <%= form.submit t('profile.create_experience'), class: "w-full rounded-lg px-6 py-3 bg-lime-600 hover:bg-lime-700 text-white font-medium focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-lime-500" %>
           </div>
         <% end %>
         <button class="mt-4 text-sm text-gray-600 hover:text-gray-800" onclick="this.closest('turbo-frame').innerHTML = ''">Закрыть</button>
       </div>
     </div>
   </turbo-frame>

<style>
  #modal .fixed {
    position: fixed;
    background-color: rgba(0, 0, 0, 0.7); 
    z-index: 50;
    animation: fadeIn 0.3s ease-in-out;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
</style>
