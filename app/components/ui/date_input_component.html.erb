<div>
  <%= @form.label @field_name, @label, class: "block text-sm font-medium text-gray-700 mb-1" %>
  <%= @form.text_field @field_name,
      class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-lime-500 focus:ring-lime-500 sm:text-sm #{@input_class}",
      data: {
        controller: "flatpickr",
        flatpickr_date_format: "Y-m-d",
        flatpickr_min_date: @min_date
      } %>
</div>

<% content_for :javascript do %>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      flatpickr('[data-controller="flatpickr"]', {
        dateFormat: "Y-m-d",
        locale: "ru",
        minDate: "<%= @min_date %>",
        disableMobile: false
      });
    });
  </script>
<% end %> 