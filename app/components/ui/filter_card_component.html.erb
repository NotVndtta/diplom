<div data-tippy-tooltip-target="tooltip" class="relative w-fit flex items-center gap-2 text-sm text-gray-500 hover:text-blue-600 active:text-blue-700 cursor-pointer">
  <button type="button" class="bg-white inline-flex items-center px-4 py-1.5 gap-2.5 border border-gray-300 rounded-lg">
    <%= content %>
    <%= inline_svg "icons/filter", class: "[&>svg]:size-4" %>
  </button>
  <% if @selected_count > 0 %>
    <p class="absolute flex bg-[#E02424] text-white p-0.5 rounded-full top-[-5px] right-0 text-xs h-4 min-w-4 text-center items-center justify-center">
      <%= @selected_count %>
    </p>
  <% end %>
</div>
