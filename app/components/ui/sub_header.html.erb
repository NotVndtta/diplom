<header class="sticky flex items-center top-[--header-height] h-[--main-content-header-height] px-5 bg-white border-b border-gray-200 z-[11]">
  <% if @back_url %>
    <%= link_to inline_svg("icons/arrow-narrow-left"),
      @back_url,
      class: "transition-colors text-gray-500 hover:text-gray-900 active:text-blue-400"
    %>
    <hr class="h-5 border border-gray-200 mx-4">
  <% end %>

  <%= content %>
</header>
