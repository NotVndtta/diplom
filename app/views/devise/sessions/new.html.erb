<div id="new_user_session_form">
  <div class="flex items-center justify-center">
    <div class="w-full max-w-md p-8 space-y-8 bg-white rounded-2xl shadow-lg">
      <h2 class="text-2xl font-bold text-center text-gray-900">Вход</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6", data: { turbo: true }, novalidate: true }) do |f| %>
        <%= render Ui::StringInputComponent.new(
          form: f,
          field_name: :email,
          label: "Почта",
          type: "email",
          input_class: "mt-1 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-lime-500 focus:border-lime-500"
        ) %>

        <%= render Ui::StringInputComponent.new(
          form: f,
          field_name: :password,
          label: "Пароль",
          type: "password",
          autocomplete: "current-password",
          input_class: "mt-1 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-lime-500 focus:border-lime-500"
        ) %>

        <% if devise_mapping.rememberable? %>
          <div class="field flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
            <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Вход", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-lime-600 hover:bg-lime-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-lime-500" %>
        </div>

        <div class="mt-6">
          <%= link_to "Войти через Vineyard", new_vineyard_auth_path, class: "group relative w-full flex justify-center py-2 px-4 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>

      <div class="text-sm text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>