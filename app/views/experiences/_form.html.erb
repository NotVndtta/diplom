<%= form_with(model: experience, class: "contents") do |form| %>
  <% if experience.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(experience.errors.count, "error") %> prohibited this experience from being saved:</h2>
      <ul class="list-disc ml-6">
        <% experience.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :start_date_at %>
    <%= form.date_field :start_date_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": experience.errors[:start_date_at].none?, "border-red-400 focus:outline-red-600": experience.errors[:start_date_at].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :end_date_at %>
    <%= form.date_field :end_date_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": experience.errors[:end_date_at].none?, "border-red-400 focus:outline-red-600": experience.errors[:end_date_at].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.textarea :description, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": experience.errors[:description].none?, "border-red-400 focus:outline-red-600": experience.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :company %>
    <%= form.text_field :company, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": experience.errors[:company].none?, "border-red-400 focus:outline-red-600": experience.errors[:company].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>