<% content_for :title, "Детальная страница" %>

<div class="max-w-2xl mx-auto px-4 sm:px-6 py-6 sm:py-8">
  <% if notice.present? %>
    <div class="mb-4 sm:mb-6 transition-all duration-300 ease-in-out transform hover:scale-[1.01]">
      <div class="px-4 py-3 sm:px-6 sm:py-4 rounded-lg sm:rounded-xl bg-emerald-50 border border-emerald-200 flex items-start">
        <svg class="w-5 h-5 sm:w-6 sm:h-6 text-emerald-500 mr-2 sm:mr-3 mt-0.5 sm:mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        <p class="text-xs sm:text-sm font-medium text-emerald-800"><%= notice %></p>
      </div>
    </div>
  <% end %>

  <div class="bg-white rounded-lg sm:rounded-xl shadow-md sm:shadow-lg overflow-hidden border border-gray-200">
    <div class="bg-gradient-to-r from-lime-600 to-lime-500 px-4 py-4 sm:px-6 sm:py-5">
      <h1 class="text-xl sm:text-2xl md:text-3xl font-bold text-white">Детальная карточка агрооперации</h1>
      <p class="text-lime-100 text-xs sm:text-sm mt-1">Создал <%= @job_card.user&.name %></p>
    </div>

    <div class="p-4 sm:p-6 md:p-8 space-y-4 sm:space-y-6">
      <div class="grid grid-cols-1 gap-4 sm:gap-6">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
          <div class="bg-gray-50 p-4 sm:p-6 rounded-lg sm:rounded-xl border border-gray-200">
            <h3 class="text-xs sm:text-sm font-semibold text-gray-500 uppercase tracking-wider mb-3 sm:mb-4">Об хозяйстве</h3>
            <div class="space-y-3 sm:space-y-4">
              <div>
                <p class="text-xs sm:text-sm font-medium text-gray-500">Хозяйство</p>
                <p class="text-gray-900 font-medium text-sm sm:text-base"><%= @job_card.farm_name %></p>
              </div>
              <div>
                <p class="text-xs sm:text-sm font-medium text-gray-500">Местоположение</p>
                <p class="text-gray-900 font-medium text-sm sm:text-base"><%= @job_card.location %></p>
              </div>
            </div>
          </div>

          <div class="bg-gray-50 p-4 sm:p-6 rounded-lg sm:rounded-xl border border-gray-200">
            <h3 class="text-xs sm:text-sm font-semibold text-gray-500 uppercase tracking-wider mb-3 sm:mb-4">Детали работы</h3>
            <div class="space-y-3 sm:space-y-4">
              <div>
                <p class="text-xs sm:text-sm font-medium text-gray-500">Дата выполнения</p>
                <p class="text-gray-900 font-medium text-sm sm:text-base"><%= l(@job_card.date_at, format: :long) %></p>
              </div>
              <div>
                <p class="text-xs sm:text-sm font-medium text-gray-500">Статус</p>
                <p class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_color_classes(@job_card.status) %>">
                  <%= @job_card.status %>
                </p>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-gray-50 p-4 sm:p-6 rounded-lg sm:rounded-xl border border-gray-200">
          <h3 class="text-xs sm:text-sm font-semibold text-gray-500 uppercase tracking-wider mb-3 sm:mb-4">Рабочая информация</h3>
          <div class="grid grid-cols-2 sm:grid-cols-3 gap-3 sm:gap-5">
            <div>
              <p class="text-xs sm:text-sm font-medium text-gray-500">Оплата</p>
              <p class="text-blue-600 font-bold text-lg sm:text-xl"><%= number_to_currency(@job_card.remuneration) %></p>
            </div>
            <div>
              <p class="text-xs sm:text-sm font-medium text-gray-500">Часы работы</p>
              <p class="text-gray-900 font-bold text-lg sm:text-xl"><%= @job_card.work_amount %></p>
            </div>
            <div class="col-span-2 sm:col-span-1">
              <p class="text-xs sm:text-sm font-medium text-gray-500">Количество рабочих</p>
              <p class="text-gray-900 font-bold text-lg sm:text-xl"><%= @job_card.count_users %></p>
            </div>
          </div>
        </div>

        <div class="bg-gray-50 p-4 sm:p-6 rounded-lg sm:rounded-xl border border-gray-200">
          <h3 class="text-xs sm:text-sm font-semibold text-gray-500 uppercase tracking-wider mb-4 sm:mb-6">Описание задачи</h3>
          <div class="prose prose-sm sm:prose-base max-w-none text-gray-700">
            <%= simple_format(@job_card.description) %>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-gray-50 px-4 sm:px-6 py-4 sm:py-6 border-t border-gray-200 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-3 sm:gap-5">
      <%= link_to job_cards_path, class: "order-2 sm:order-1 inline-flex items-center px-4 py-2 sm:px-6 sm:py-3 border border-gray-300 rounded-md shadow-sm text-xs sm:text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-lime-500 transition-all" do %>
        <svg class="-ml-1 mr-2 sm:mr-3 h-4 w-4 sm:h-5 sm:w-5 text-gray-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
        </svg>
        Назад к списку
      <% end %>

      <div class="order-1 sm:order-2 flex flex-col sm:flex-row gap-3 sm:gap-5 w-full sm:w-auto">
        <%= link_to edit_job_card_path(@job_card), class: "inline-flex justify-center items-center px-4 py-2 sm:px-6 sm:py-3 border border-transparent rounded-lg sm:rounded-xl shadow-sm sm:shadow-md text-xs sm:text-sm font-medium text-white bg-lime-600 hover:bg-lime-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-lime-500 transition-all ease-in-out transform hover:scale-105" do %>
          <svg class="-ml-1 mr-2 sm:mr-3 h-4 w-4 sm:h-5 sm:w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
          </svg>
          Редактировать
        <% end %>

        <%= button_to @job_card, method: :delete, data: { turbo_confirm: "Вы уверены, что хотите удалить эту карточку?" }, class: "inline-flex justify-center items-center px-4 py-2 sm:px-6 sm:py-3 border border-transparent rounded-lg sm:rounded-xl shadow-sm sm:shadow-md text-xs sm:text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-all ease-in-out transform hover:scale-105" do %>
          <svg class="-ml-1 mr-2 sm:mr-3 h-4 w-4 sm:h-5 sm:w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
          Удалить
        <% end %>
      </div>
    </div>
  </div>
</div>

<% if user_signed_in? && @job_card.user != current_user && current_user.freelancer? %>
  <div class="max-w-2xl mx-auto px-4 sm:px-6 mt-4 sm:mt-6">
    <%= link_to "Откликнуться на вакансию", job_card_job_applications_path(@job_card), data: { turbo_method: :post }, class: "w-full sm:w-auto inline-flex justify-center items-center px-6 py-3 border border-transparent rounded-xl shadow-lg text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all" %>
  </div>
<% end %>

<% if user_signed_in? && @job_card.user == current_user %>
  <div class="max-w-2xl mx-auto px-4 sm:px-6 mt-4 sm:mt-6">
    <%= link_to "Просмотр откликов", job_card_job_applications_path(@job_card), class: "w-full sm:w-auto inline-flex justify-center items-center px-6 py-3 border border-gray-300 rounded-xl shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-lime-500 transition-all" %>
  </div>
<% end %>