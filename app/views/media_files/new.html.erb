<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">Загрузка нового медиафайла</h1>
  <%= form_with model: @media_file, local: true, class: 'space-y-4' do |form| %>
    <div>
      <%= form.label :file, class: 'block' %>
      <%= form.file_field :file, class: 'border p-2 w-full' %>
    </div>
    <div>
      <%= form.submit 'Загрузить', class: 'bg-blue-500 text-white px-4 py-2 rounded' %>
    </div>
  <% end %>
</div>