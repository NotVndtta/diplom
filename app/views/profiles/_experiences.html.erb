<div class="w-full max-w-4xl mx-auto py-12">
  <div class="bg-white shadow-lg rounded-xl p-8 animate-slide-in">
    <h2 class="text-2xl font-semibold text-gray-900 mb-6"><%= t('profile.add_experience') %></h2>
    <%= form_with(model: [user, Experience.new], url: profile_experiences_path(user), class: "space-y-6", data: { turbo: true }) do |form| %>
      <% if Experience.new.errors.any? %>
        <div id="error_explanation" class="bg-red-100 text-red-700 px-4 py-3 font-medium rounded-lg animate-slide-in">
          <h2><%= pluralize(Experience.new.errors.count, "error") %> <%= t('profile.experience_errors') %>:</h2>
          <ul class="list-disc ml-6">
            <% Experience.new.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <div class="animate-slide-in">
          <%= form.label :start_date_at, class: "block text-sm font-medium text-gray-700" %>
          <%= form.date_field :start_date_at, class: "mt-1 block w-full rounded-lg border px-4 py-3 shadow-sm focus:outline-none focus:ring-2 focus:ring-lime-500 #{form.object.errors[:start_date_at].any? ? 'border-red-400' : 'border-lime-200'} transition-all duration-200" %>
          <% if form.object.errors[:start_date_at].any? %>
            <p class="text-red-600 text-sm mt-1"><%= form.object.errors[:start_date_at].first %></p>
          <% end %>
        </div>
        <div class="animate-slide-in delay-100">
          <%= form.label :end_date_at, class: "block text-sm font-medium text-gray-700" %>
          <%= form.date_field :end_date_at, class: "mt-1 block w-full rounded-lg border px-4 py-3 shadow-sm focus:outline-none focus:ring-2 focus:ring-lime-500 #{form.object.errors[:end_date_at].any? ? 'border-red-400' : 'border-lime-200'} transition-all duration-200" %>
          <% if form.object.errors[:end_date_at].any? %>
            <p class="text-red-600 text-sm mt-1"><%= form.object.errors[:end_date_at].first %></p>
          <% end %>
        </div>
      </div>

      <div class="animate-slide-in delay-200">
                <%= render Ui::StringInputComponent.new(
          form: form,
          field_name: :company,
          label: t("operations.intake.invoice_number"),
          input_class: "mt-1 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-lime-500 focus:border-lime-500"
        ) %>

      </div>

      <div class="animate-slide-in delay-300">
        <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_area :description, rows: 4, class: "mt-1 block w-full rounded-lg border px-4 py-3 shadow-sm focus:outline-none focus:ring-2 focus:ring-lime-500 #{Experience.new.errors[:description].any? ? 'border-red-400' : 'border-lime-200'} transition-all duration-200" %>
      </div>

      <div class="animate-slide-in delay-400">
        <%= form.submit t('profile.create_experience'), class: "w-full rounded-lg px-6 py-3 bg-lime-600 hover:bg-lime-700 text-white font-medium focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-lime-500 transition-all duration-300 transform hover:scale-105" %>
      </div>
    <% end %>
  </div>

  <div id="experiences" class="mt-8 space-y-6">
    <% if experiences.any? %>
      <% experiences.each_with_index do |experience, index| %>
        <div class="bg-white shadow-md rounded-xl p-6 hover:shadow-lg transition-all duration-300 transform hover:scale-101 animate-slide-in" style="animation-delay: <%= index * 100 %>ms;">
          <div class="flex justify-between items-center">
            <div>
              <h3 class="text-lg font-semibold text-gray-900"><%= experience.company %></h3>
              <p class="text-sm text-gray-600">
                <%= experience.start_date_at.strftime("%B %Y") %> - 
                <%= experience.end_date_at&.strftime("%B %Y") || t('profile.present') %>
              </p>
              <p class="mt-2 text-sm text-gray-700"><%= experience.description %></p>
            </div>
            <div class="space-x-3">
              <% if experience.user == current_user %>
                <%= link_to "Редактировать", edit_profile_experience_path(user, experience), class: "text-lime-600 hover:text-lime-800 text-sm font-medium transition-colors duration-200" %>
                <%= form_with(url: profile_experience_path(user, experience), method: :delete, data: { turbo: false }) do |form| %>
                  <%= form.submit "Удалить", class: "text-red-600 hover:text-red-800 text-sm font-medium transition-colors duration-200", data: { confirm: t('profile.confirm_delete') } %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center text-gray-600 py-10 animate-slide-in"><%= t('profile.no_experiences') %></p>
    <% end %>
  </div>
</div>