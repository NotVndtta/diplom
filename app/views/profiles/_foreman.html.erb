<div class="flex items-center justify-between py-4">
  <h2 class="text-2xl font-bold text-gray-800">Информация о бригадире</h2>

  <% if @foreman_description.new_record? || (@editing && current_user == @user) %>
    <div class="flex space-x-4">
      <%= form_with model: @foreman_description, url: foreman_description_profile_path(@user), method: :post, local: true, html: { id: 'foreman_form', class: "flex items-center space-x-4" } do |form| %>
        <%= form.submit "Сохранить", class: "inline-flex items-center px-5 py-2.5 text-sm font-medium rounded-lg text-white bg-lime-600 hover:bg-lime-700 focus:outline-none focus:ring-2 focus:ring-lime-500 shadow-sm transition" %>
        <% if @editing && !@foreman_description.new_record? %>
          <%= link_to "Отменить", profile_path(@user), class: "inline-flex items-center px-5 py-2.5 text-sm font-medium rounded-lg text-white bg-gray-500 hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-400 shadow-sm transition" %>
        <% end %>
      <% end %>
    </div>
  <% elsif !@foreman_description.new_record? && !@editing && current_user == @user %>
    <%= link_to "Редактировать", profile_path(@user, edit: true), class: "inline-flex items-center px-5 py-2.5 text-sm font-medium rounded-lg text-white bg-blue-500 hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 shadow-sm transition" %>
  <% end %>
</div>


  <%= form_with model: @foreman_description, url: foreman_description_profile_path(@user), method: :post, local: true, html: { id: 'foreman_form' } do |form| %>
    <% if @foreman_description.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6">
        <strong class="font-bold"><%= t('errors.title') %></strong>
        <ul class="list-disc list-inside mt-2">
          <% @foreman_description.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-6">
      <%= form.label :farm_name, "Агрохозяйство", class: "block text-sm font-semibold text-gray-700 mb-1" %>
      <%= form.text_field :farm_name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-lime-500 focus:border-lime-500 transition", readonly: !@foreman_description.new_record? && !@editing, required: true %>
    </div>

    <div class="mb-6">
      <%= form.label :description,"Информация об хозяйстве", class: "block text-sm font-semibold text-gray-700 mb-1" %>
      <%= form.text_area :description,
        class: "w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-lime-500 focus:border-lime-500 transition min-h-[2.5rem] max-h-[7.5rem] resize-y",
        rows: 1,
        readonly: !@foreman_description.new_record? && !@editing,
        required: true %>

    </div>

   
  <% end %>
