<div class="max-w-7xl mx-auto px-4 lg:px-8">
  <div class="flex flex-col lg:flex-row gap-8">
    <div class="max-w-4xl mt-2 mx-auto bg-white shadow-2xl rounded-2xl p-8 transform transition-all hover:shadow-3xl">
      <div class="flex flex-col lg:flex-row items-center lg:items-start space-y-6 lg:space-y-0 lg:space-x-8">
        <div class="flex-shrink-0 w-full lg:w-1/3 flex justify-center lg:justify-start h-full">
          <div class="relative group w-full h-full">
            <img src="https://images.unsplash.com/photo-1500648767791-00dcc994a43e?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                  class="w-full h-full object-cover rounded-lg transition-transform group-hover:scale-110 duration-300" 
                  alt="Profile Photo">
            <div class="absolute inset-0 bg-lime-800 bg-opacity-60 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity rounded-lg">
              <span class="text-white text-sm font-medium">Изменить</span>
            </div>
          </div>
        </div>
        <div class="w-full lg:w-2/3 space-y-8">
          <div class="text-center lg:text-left bg-gray-50 p-6 rounded-xl shadow-sm">
            <h1 class="text-4xl font-extrabold text-gray-900 tracking-tight animate-pulse-slow">
              <%= user.first_name %> <%= user.last_name %>
            </h1>
            <p class="text-base text-gray-600 mt-2"><%= user.email %></p>
            <p class="text-base text-lime-600 font-semibold mt-1 capitalize"><%= user.role %></p>
          </div>

          <div class="bg-gray-50 p-6 rounded-xl shadow-sm">
            <h2 class="text-2xl font-semibold text-gray-900 mb-6"><%= t('profile.title') %></h2>
            <dl class="grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-2">
              <div class=">
                <dt class="text-sm font-medium text-gray-600 flex items-center">
                  <svg class="w-6 h-6 mr-2 text-lime-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                  <%= t('profile.about') %>
                </dt>
                <dd class="mt-2 text-sm text-gray-800">
                  <%= user.about.present? ? user.about : t('profile.not_provided') %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-600 flex items-center">
                  <svg class="w-6 h-6 mr-2 text-lime-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
                  <%= t('profile.phone') %>
                </dt>
                <dd class="mt-2 text-sm text-gray-800">
                  <%= user.phone.present? ? user.phone : t('profile.not_provided') %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-600 flex items-center">
                  <svg class="w-6 h-6 mr-2 text-lime-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                  <%= t('profile.birth_year') %>
                </dt>
                <dd class="mt-2 text-sm text-gray-800"><%= user.birth_year %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-600 flex items-center">
                  <svg class="w-6 h-6 mr-2 text-lime-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                  <%= t('profile.city') %>
                </dt>
                <dd class="mt-2 text-sm text-gray-800"><%= user.city %></dd>
              </div>
            </dl>
          </div>
        </div>
      </div>

      <div class="border-t border-lime-200 mt-2">
        <%= render "profiles/foreman",user: @user, experiences: @experiences  if @user.foreman?%>
      </div>

      <div class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4 pt-8">
        <%= link_to t('profile.agro_operation'), job_cards_path, 
            class: "flex-1 text-center px-6 py-3 border border-lime-300 text-sm font-medium rounded-lg text-lime-700 bg-lime-50 hover:bg-lime-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-lime-500 transition-all duration-300 transform hover:scale-105" %>
        <%= link_to "Редактировать", edit_profile_path(user), 
            class: "flex-1 text-center px-6 py-3 border border-transparent text-sm font-medium rounded-lg text-white bg-lime-600 hover:bg-lime-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-lime-500 transition-all duration-300 transform hover:scale-105 delay-100" %>
      </div>
      </div>

      <div class="w-full lg:w-1/3 max-h-[300px] bg-white mt-2 rounded-2xl p-6 shadow">
        <h2 class="text-xl font-semibold text-lime-700 pb-4">Статистика</h2>

        <%= link_to "Статистика задач", stats_profile_path(@user),
            class: "block text-center px-4 py-2 mb-4 border border-lime-300 text-sm font-medium rounded-lg text-lime-700 bg-white hover:bg-lime-100 transition-all duration-300 transform hover:scale-105" %>

        <div class="space-y-4">
          <div class="bg-white p-4 rounded-lg shadow">
            <h3 class="text-sm font-medium text-gray-700">Выполнено задач</h3>
          </div>
          <div class="bg-white p-4 rounded-lg shadow">
            <h3 class="text-sm font-medium text-gray-700">Активные задачи</h3>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= link_to t("work_orders.show_page.refine"),
  show_modal_profile_path(user),
  class: "!py-1.5 !px-2 rounded-md transition-colors duration-200 bg-yellow-300 text-yellow-800 hover:bg-yellow-400",
  data: { turbo_stream: "true"}
 %>