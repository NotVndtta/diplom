<div class="min-h-screen">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="flex flex-col lg:flex-row gap-8">
      <div class="w-full  mb-4">
      <div class="bg-white rounded-2xl sm:rounded-3xl shadow-md sm:shadow-xl p-4 sm:p-6 md:p-8 transition-all duration-300 hover:shadow-lg sm:hover:shadow-2xl  mb-4">
      <div class="flex flex-col lg:flex-row items-center lg:items-start gap-4 sm:gap-6 md:gap-8">
        <div class="flex-shrink-0 w-full lg:w-1/3">
          <div class="relative group overflow-hidden rounded-xl sm:rounded-2xl aspect-square max-w-[180px] sm:max-w-[250px] mx-auto lg:mx-0">
            <% if @user.avatar? %>
              <%= image_tag @user.avatar.url, class: "w-full h-full object-cover transition-transform duration-500 group-hover:scale-110", alt: "Profile Photo" %>
            <% else %>
              <%= image_tag "https://via.placeholder.com/300", class: "w-full h-full object-cover transition-transform duration-500 group-hover:scale-110", alt: "Profile Photo" %>
            <% end %>
            <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          </div>
        </div>
    
        <div class="w-full space-y-4 sm:space-y-6">
          <div class="bg-gradient-to-r from-lime-50 via-white to-lime-50 p-4 sm:p-6 rounded-xl sm:rounded-2xl shadow-sm text-center lg:text-left animate-gradient-shift">
            <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 tracking-tight animate-slide-up">
              <%= user.first_name %> <%= user.last_name %>
            </h1>
            <p class="text-sm sm:text-base text-gray-600 mt-1 sm:mt-2 animate-fade-in"><%= user.email %></p>
            <p class="text-sm sm:text-base text-lime-600 font-semibold mt-1 capitalize animate-pop-in"><%= user.role %></p>
          </div>
    
          <div class="bg-white p-4 sm:p-6 rounded-xl sm:rounded-2xl shadow-sm border border-gray-100">
            <h2 class="text-xl sm:text-2xl font-semibold text-gray-900 mb-4 sm:mb-6"><%= t('profile.title') %></h2>
            <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
              <div>
                <dt class="text-xs sm:text-sm font-medium text-gray-600 flex items-center">
                  <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2 text-lime-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <%= t('profile.about') %>
                </dt>
                <dd class="mt-1 sm:mt-2 text-xs sm:text-sm text-gray-800">
                  <%= user.about.present? ? user.about : t('profile.not_provided') %>
                </dd>
              </div>
              <div>
                <dt class="text-xs sm:text-sm font-medium text-gray-600 flex items-center">
                  <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2 text-lime-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                  <%= t('profile.phone') %>
                </dt>
                <dd class="mt-1 sm:mt-2 text-xs sm:text-sm text-gray-800">
                  <%= user.phone.present? ? user.phone : t('profile.not_provided') %>
                </dd>
              </div>
              <div>
                <dt class="text-xs sm:text-sm font-medium text-gray-600 flex items-center">
                  <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2 text-lime-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  <%= t('profile.birth_year') %>
                </dt>
                <dd class="mt-1 sm:mt-2 text-xs sm:text-sm text-gray-800"><%= user.birth_year %></dd>
              </div>
              <div>
                <dt class="text-xs sm:text-sm font-medium text-gray-600 flex items-center">
                  <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2 text-lime-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <%= t('profile.city') %>
                </dt>
                <dd class="mt-1 sm:mt-2 text-xs sm:text-sm text-gray-800"><%= user.city %></dd>
              </div>
            </dl>
          </div>
        </div>
      </div>
    
      <div class="border-t border-gray-100 mt-6 sm:mt-8 pt-6 sm:pt-8">
        <%= render "profiles/foreman", user: @user, experiences: @experiences if @user.foreman?  && @user == current_user%>
      </div>
      <% if user_signed_in? && @user == current_user %>
    
      <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 pt-6 sm:pt-8">
        <% if @user.freelancer? %>
          <%= link_to "Добавить опыт работы", show_modal_profile_experience_path(user), 
              class: "flex-1 text-center px-4 py-2 sm:px-6 sm:py-3 text-xs sm:text-sm font-medium rounded-lg text-lime-700 bg-lime-100 hover:bg-lime-200 focus:outline-none focus:ring-2 focus:ring-lime-500 transition-all duration-300 transform hover:scale-105", 
              data: { turbo_stream: "true" } %>
        <% else %>
          <%= link_to t('profile.agro_operation'), job_cards_path, 
              class: "flex-1 text-center px-4 py-2 sm:px-6 sm:py-3 text-xs sm:text-sm font-medium rounded-lg text-lime-700 bg-lime-100 hover:bg-lime-200 focus:outline-none focus:ring-2 focus:ring-lime-500 transition-all duration-300 transform hover:scale-105" %>
        <% end %>
        <%= link_to "Редактировать", edit_profile_path(user), 
            class: "flex-1 text-center px-4 py-2 sm:px-6 sm:py-3 text-xs sm:text-sm font-medium rounded-lg text-white bg-lime-600 hover:bg-lime-700 focus:outline-none focus:ring-2 focus:ring-lime-500 transition-all duration-300 transform hover:scale-105" %>
      </div>
      <% end %>

    </div>

        <%= render "profiles/experiences", user: @user, experiences: @experiences if @user.freelancer? %>
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes slideUp {
    0% { transform: translateY(20px); opacity: 0; }
    100% { transform: translateY(0); opacity: 1; }
  }
  @keyframes fadeIn {
    0% { opacity: 0; }
    100% { opacity: 1; }
  }
  @keyframes popIn {
    0% { transform: scale(0.8); opacity: 0; }
    100% { transform: scale(1); opacity: 1; }
  }
  .animate-slide-up {
    animation: slideUp 0.6s ease-out forwards;
  }
  .animate-fade-in {
    animation: fadeIn 0.8s ease-out forwards;
    animation-delay: 0.2s;
    opacity: 0;
  }
  .animate-pop-in {
    animation: popIn 0.5s ease-out forwards;
    animation-delay: 0.4s;
    opacity: 0;
  }
    @keyframes gradientShift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
  .animate-gradient-shift {
    background-size: 200% 200%;
    animation: gradientShift 10s ease infinite;
  }
</style>