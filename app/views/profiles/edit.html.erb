<% content_for :title, t('profile.edit_profile') %>

<div class="min-h-screen from-gray-50 to-indigo-100 flex items-center justify-center px-4 py-12 sm:px-6 lg:px-8">
  <div class="max-w-4xl w-full space-y-8 bg-white shadow-2xl rounded-2xl p-8 transform transition-all hover:shadow-3xl">
    <div>
      <h2 class="text-center text-3xl font-extrabold text-gray-900"><%= t('profile.edit_profile') %></h2>
    </div>

    <%= form_with(model: @user, url: profile_path(@user), local: true, class: "mt-8 space-y-6") do |form| %>
      <% if @user.errors.any? %>
        <div id="error_explanation" class="bg-red-100 text-red-600 px-4 py-3 font-medium rounded-md">
          <h2><%= pluralize(@user.errors.count, "error") %> <%= t('profile.edit_errors') %>:</h2>
          <ul class="list-disc ml-6">
            <% @user.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <div>
          <%= form.label :first_name, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :first_name, required: true, class: "mt-1 block w-full rounded-md border px-4 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 #{@user.errors[:first_name].any? ? 'border-red-400' : 'border-gray-300'}" %>
        </div>
        <div>
          <%= form.label :last_name, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :last_name, required: true, class: "mt-1 block w-full rounded-md border px-4 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 #{@user.errors[:last_name].any? ? 'border-red-400' : 'border-gray-300'}" %>
        </div>
      </div>

      <div>
        <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= form.email_field :email, required: true, autocomplete: "email", class: "mt-1 block w-full rounded-md border px-4 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 #{@user.errors[:email].any? ? 'border-red-400' : 'border-gray-300'}" %>
      </div>

      <div>
        <%= form.label :about, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_area :about, rows: 4, class: "mt-1 block w-full rounded-md border px-4 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 #{@user.errors[:about].any? ? 'border-red-400' : 'border-gray-300'}" %>
      </div>

      <div>
        <%= form.label :phone, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :phone, class: "mt-1 block w-full rounded-md border px-4 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 #{@user.errors[:phone].any? ? 'border-red-400' : 'border-gray-300'}" %>
      </div>

      <div>
        <%= form.label :birth_year, class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :birth_year, required: true, min: 1900, max: Date.today.year, class: "mt-1 block w-full rounded-md border px-4 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 #{@user.errors[:birth_year].any? ? 'border-red-400' : 'border-gray-300'}" %>
      </div>

      <div>
        <%= form.label :city, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :city, required: true, class: "mt-1 block w-full rounded-md border px-4 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 #{@user.errors[:city].any? ? 'border-red-400' : 'border-gray-300'}" %>
      </div>

      <div>
        <%= form.label :role, class: "block text-sm font-medium text-gray-700" %>
        <%= form.select :role, options_for_select(User::ROLES, @user.role), { prompt: t('profile.select_role') }, class: "mt-1 block w-full px-3 py-2 bg-white border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 #{@user.errors[:role].any? ? 'border-red-400' : 'border-gray-300'}", required: true %>
      </div>

      <div class="border-t border-gray-200 pt-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4"><%= t('profile.change_password') %></h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
          <div>
            <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
            <%= form.password_field :password, autocomplete: "new-password", placeholder: t('profile.leave_blank'), class: "mt-1 block w-full rounded-md border px-4 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 #{@user.errors[:password].any? ? 'border-red-400' : 'border-gray-300'}" %>
            <% if @minimum_password_length %>
              <p class="mt-1 text-xs text-gray-500"><%= t('profile.minimum_password_length', length: @minimum_password_length) %></p>
            <% end %>
          </div>
          <div>
            <%= form.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
            <%= form.password_field :password_confirmation, autocomplete: "new-password", placeholder: t('profile.leave_blank'), class: "mt-1 block w-full rounded-md border px-4 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 #{@user.errors[:password_confirmation].any? ? 'border-red-400' : 'border-gray-300'}" %>
          </div>
        </div>
      </div>

      <div class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4 pt-6">
        <%= form.submit "Сохранить", class: "flex-1 text-center px-6 py-3 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" %>
        <%= link_to t('profile.cancel'), profile_path(@user), class: "flex-1 text-center px-6 py-3 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" %>
      </div>
    <% end %>
  </div>
</div>