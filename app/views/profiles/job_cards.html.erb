<% content_for :title, "Job cards" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-4">
    <h1 class="font-bold text-3xl">Job cards</h1>
    <%= link_to "New job card", new_job_card_path, class: "rounded-md px-3 py-2 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="job_cards" class="space-y-6 sm:grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 min-w-full">
    <% if @job_cards.any? %>
      <% @job_cards.each do |job_card| %>
        <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200 min-h-[280px] text-sm">
          <div class="bg-gradient-to-r from-lime-600 to-lime-500 px-3 py-2">
            <h1 class="text-lg font-semibold text-white">Job Card Details</h1>
            <p class="text-lime-100 text-xs mt-0.5">Created by <%= job_card.user&.name || "Unknown" %></p>
          </div>

          <div class="p-3 space-y-3">
            <div class="space-y-3">
              <div class="bg-gray-50 p-3 rounded-lg border border-gray-200">
                <h3 class="text-[10px] font-semibold text-gray-500 uppercase tracking-wider mb-2">Farm Information</h3>
                <div class="space-y-1.5">
                  <div>
                    <p class="text-xs font-medium text-gray-500">Farm Name</p>
                    <p class="text-gray-900 font-medium"><%= job_card.farm_name %></p>
                  </div>
                  <div>
                    <p class="text-xs font-medium text-gray-500">Location</p>
                    <p class="text-gray-900 font-medium"><%= job_card.location %></p>
                  </div>
                </div>
              </div>

              <div class="bg-gray-50 p-3 rounded-lg border border-gray-200">
                <h3 class="text-[10px] font-semibold text-gray-500 uppercase tracking-wider mb-2">Job Details</h3>
                <div class="space-y-1.5">
                  <div>
                    <p class="text-xs font-medium text-gray-500">Date</p>
                    <%= l(job_card.date_at, format: :long) if job_card.date_at.present? %>
                  </div>
                  <div>
                    <p class="text-xs font-medium text-gray-500">Status</p>
                    <p class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium <%= status_color_classes(job_card.status) %>">
                      <%= job_card.status %>
                    </p>
                  </div>
                </div>
              </div>

              <div class="bg-gray-50 p-3 rounded-lg border border-gray-200">
                <h3 class="text-[10px] font-semibold text-gray-500 uppercase tracking-wider mb-2">Work Information</h3>
                <div class="grid grid-cols-2 sm:grid-cols-3 gap-2">
                  <div>
                    <p class="text-xs font-medium text-gray-500">Remuneration</p>
                    <p class="text-blue-600 font-bold"><%= number_to_currency(job_card.remuneration) %></p>
                  </div>
                  <div>
                    <p class="text-xs font-medium text-gray-500">Work Amount</p>
                    <p class="text-gray-900 font-bold"><%= job_card.work_amount %></p>
                  </div>
                  <div class="col-span-2 sm:col-span-1">
                    <p class="text-xs font-medium text-gray-500">Required Workers</p>
                    <p class="text-gray-900 font-bold"><%= job_card.count_users %></p>
                  </div>
                </div>
              </div>

              <div class="bg-gray-50 p-3 rounded-lg border border-gray-200">
                <h3 class="text-[10px] font-semibold text-gray-500 uppercase tracking-wider mb-2">Description</h3>
                <div class="prose prose-sm max-w-none text-gray-700">
                  <%= simple_format(job_card.description) %>
                </div>
              </div>
            </div>
          </div>

          <div class="bg-gray-50 px-3 py-2 border-t border-gray-200 flex flex-col sm:flex-row justify-end items-start sm:items-center gap-3">
            <div class="flex flex-col sm:flex-row gap-3 w-full sm:w-auto">
              <%= link_to job_card_path(job_card), class: "inline-flex justify-center items-center px-3 py-2 border border-gray-300 rounded-lg shadow-md text-xs font-medium text-gray-700 bg-white hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-300 transition-all ease-in-out transform hover:scale-105" do %>
                <svg class="-ml-1 mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12H9m0 0l3-3m-3 3l3 3" />
                </svg>
                Show
              <% end %>

              <%= link_to edit_job_card_path(job_card), class: "inline-flex justify-center items-center px-3 py-2 border border-transparent rounded-lg shadow-md text-xs font-medium text-white bg-lime-600 hover:bg-lime-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-lime-500 transition-all ease-in-out transform hover:scale-105" do %>
                <svg class="-ml-1 mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                </svg>
                Edit
              <% end %>

              <%= button_to job_card, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this job card?" }, class: "inline-flex justify-center items-center px-3 py-2 border border-transparent rounded-lg shadow-md text-xs font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-all ease-in-out transform hover:scale-105" do %>
                <svg class="-ml-1 mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
                Delete
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-8 text-lg text-gray-500">No job cards found.</p>
    <% end %>
  </div>
</div>
