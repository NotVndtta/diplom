<% content_for :title, "#{@user.first_name} #{@user.last_name}'s Job Cards" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Job Cards for <%= @user.first_name %> <%= @user.last_name %></h1>
    <% if current_user == @user %>
      <%= link_to "New job card", new_job_card_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    <% end %>
  </div>

  <div id="job_cards" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @job_cards.any? %>
      <% @job_cards.each do |job_card| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render job_card %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Show", job_card, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <% if current_user == @user %>
              <%= link_to "Edit", edit_job_card_path(job_card), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
              <div class="sm:inline-block">
                <%= button_to "Destroy", job_card, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No job cards found for this user.</p>
    <% end %>
  </div>

  <%= link_to 'Back to Profile', profile_path(@user), class: 'mt-6 inline-block text-blue-600 hover:underline' %>
</div>