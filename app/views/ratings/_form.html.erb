<div class="w-full max-w-4xl mx-auto">
  <div class="bg-white rounded-2xl shadow-lg p-6 sm:p-8">
    <div class="text-center mb-8">
      <h2 class="text-2xl sm:text-3xl font-bold text-gray-900">Оставить отзыв</h2>
      <p class="mt-2 text-gray-600">Поделитесь своим мнением</p>
    </div>
    
    <% if user_signed_in? %>
      <%= form_with model: Rating.new(rateable:), 
        url: (rateable.is_a?(User) ? profile_ratings_path(rateable) : polymorphic_path([rateable, :rating])),
        method: :post,
        data: { turbo: "_top", controller: "rating" },
        class: "space-y-6" do |form| 
      %> 
        <div class="field space-y-2">
          <div class="flex items-center justify-center mb-4">
            <div class="flex items-center space-x-2">
              <% (1..5).each do |rating| %>
                <button type="button"
                        data-rating-target="star"
                        data-rating="<%= rating %>"
                        data-action="click->rating#setRating mouseover->rating#hover mouseout->rating#resetStars"
                        class="text-4xl sm:text-5xl text-gray-300 hover:text-yellow-400 transform hover:scale-110 transition-all duration-150 focus:outline-none">
                  ★
                </button>
              <% end %>
            </div>
          </div>
          <%= form.hidden_field :grade, data: { rating_target: "input" }, required: true %>
        </div>

        <div class="field space-y-2">
          <%= form.label :comment, "Ваш комментарий", class: "block text-sm font-medium text-gray-700" %>
          <div class="relative">
            <%= form.text_area :comment,
                required: true,
                rows: 4,
                placeholder: "Расскажите о вашем опыте...",
                class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-lime-500 focus:border-lime-500 text-sm sm:text-base placeholder-gray-400 transition duration-150" %>
          </div>
          <%= form.hidden_field :rateable_id, value: rateable.id %>
          <%= form.hidden_field :rateable_type, value: rateable.class.name %>
        </div>

        <div class="actions">
          <%= form.submit "Отправить отзыв", 
              class: "w-full py-3 px-6 bg-lime-600 hover:bg-lime-700 text-white text-sm sm:text-base font-semibold rounded-xl shadow-sm transform hover:translate-y-[-1px] transition-all duration-150" %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-8">
        <div class="mb-4">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
          </svg>
        </div>
        <p class="text-gray-600 mb-4">Чтобы оставить отзыв, необходимо войти в систему</p>
        <%= link_to "Войти", new_user_session_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-xl text-white bg-lime-600 hover:bg-lime-700 transition-colors duration-150" %>
      </div>
    <% end %>
  </div>
</div>