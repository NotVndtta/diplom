<div class="bg-white dark:bg-gray-600 p-4 rounded-2xl shadow-lg mb-4 rating-card flex flex-col justify-between">
  <div class="flex items-start mb-2">
    <div class="flex-shrink-0">
      <% if avatar = rating.user.profile&.avatar_url %>
        <img src="<%= avatar %>" class="w-10 h-10 rounded-full object-cover" alt="Аватар" />
      <% else %>
        <div class="w-10 h-10 rounded-full bg-lime-600 flex items-center justify-center text-white text-lg font-medium">
          <%= rating.user.email[0].upcase %>
        </div>
      <% end %>
    </div>

    <div class="ml-4 flex-grow">
      <div class="flex items-center justify-between">
        <div>
          <p class="font-semibold text-lg text-black dark:text-white">
            <%= link_to "#{rating.user.profile.first_name} #{rating.user.profile.last_name}", user_profile_path(rating.user_id), class: "hover:text-lime-600 transition-colors duration-150" %>
          </p>
          <div class="flex items-center mt-1">
            <% 1.upto(5) do |i| %>
              <span class="<%= i <= rating.grade ? 'text-yellow-400' : 'text-gray-300' %> text-lg">
                ★
              </span>
            <% end %>
            <span class="ml-2 text-sm text-gray-500 dark:text-gray-400">
              <%= rating.created_at.strftime("%d.%m.%Y") %>
            </span>
          </div>
        </div>
        
        <% if rating.user == current_user || current_user&.admin? || current_user&.moderator? %>
          <%= button_to polymorphic_path([rating.rateable, rating]), 
              method: :delete,
              data: { turbo_confirm: 'Вы уверены, что хотите удалить этот отзыв?' },
              class: "text-gray-400 hover:text-red-500 transition-colors duration-150" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
          <% end %>
        <% end %>
      </div>

      <p class="text-gray-800 dark:text-gray-200 mt-3 break-words max-w-full text-sm">
        <%= rating.comment %>
      </p>
    </div>
  </div>
</div>