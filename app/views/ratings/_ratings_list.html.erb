<div id="ratings_list" class="bg-white rounded-2xl shadow-lg p-6 sm:p-8">
  <% if rateable.ratings.any? %>
    <div class="space-y-6">
      <div class="flex items-center justify-between border-b border-gray-200 pb-4">
        <h3 class="text-xl font-bold text-gray-900">
          Отзывы
          <span class="ml-2 text-sm font-normal text-gray-500">(<%= rateable.ratings.count %>)</span>
        </h3>
        
        <div class="flex items-center">
          <% average_rating = rateable.ratings.average(:grade)&.round(1) %>
          <% if average_rating %>
            <div class="flex items-center bg-gray-50 rounded-lg px-3 py-1">
              <span class="text-yellow-400 text-lg mr-1">★</span>
              <span class="text-gray-700 font-medium"><%= average_rating %></span>
            </div>
          <% end %>
        </div>
      </div>

      <div id="ratings_container" class="space-y-6">
        <%= render partial: "ratings/rating", collection: @ratings || rateable.ratings.includes(:user).order(created_at: :desc).page(1).per(5) %>
      </div>

      <% if @ratings&.total_pages.to_i > 1 || rateable.ratings.count > 5 %>
        <div id="ratings_pagination" class="mt-6 flex justify-center" data-controller="infinite-scroll">
          <%= link_to_next_page (@ratings || rateable.ratings.page(1).per(5)), 
              "Показать еще", 
              class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50",
              data: { 
                turbo_frame: "ratings_pagination",
                action: "infinite-scroll#loadMore"
              } %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-8">
      <div class="mb-4">
        <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
        </svg>
      </div>
      <p class="text-gray-500 text-lg">Пока нет отзывов</p>
      <p class="text-gray-400 text-sm mt-2">Будьте первым, кто оставит отзыв</p>
    </div>
  <% end %>
</div> 