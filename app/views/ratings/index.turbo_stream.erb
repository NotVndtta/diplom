<%= turbo_stream.append "ratings_container" do %>
  <%= render partial: "ratings/rating", collection: @ratings %>
<% end %>

<%= turbo_stream.update "ratings_pagination" do %>
  <% if @ratings.next_page %>
    <%= link_to_next_page @ratings, 
        "Показать еще", 
        class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50",
        data: { 
          turbo_frame: "ratings_pagination",
          action: "infinite-scroll#loadMore"
        } %>
  <% end %>
<% end %> 