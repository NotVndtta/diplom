<h2 class="text-2xl font-bold text-center text-gray-800 mb-8">Sign up via Vineyard</h2>

<%= form_tag vineyard_auth_path, method: :post, class: "space-y-6 max-w-md mx-auto bg-white p-8 rounded-lg shadow-lg mt-8" do %>
  <div>
    <%= label_tag :email, "Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= email_field_tag :email, nil, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none sm:text-sm" %>
  </div>

  <div>
    <%= label_tag :password, "Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= password_field_tag :password, nil, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none sm:text-sm" %>
  </div>

  <div>
    <%= submit_tag "Sign in via Vineyard", class: "w-full py-3 px-4 bg-lime-600 text-white font-semibold rounded-md transition-all duration-300 transform hover:scale-105 hover:bg-lime-700" %>
  </div>
<% end %>
